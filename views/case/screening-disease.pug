extends ../caseLayout

include ../mixins/_formTemplate
include ../mixins/_questionBtn

block case-content
  .case-content
    form.form-horizontal(id="screening-disease-form" action=`/screening-disease/${caseId}` method="POST")
      - const formDisabled = !(locals.case.status === 'open' || locals.user.role === 'admin')
      fieldset(disabled=formDisabled)
        legend #{config.title}

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_1, questionFields)
        
        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_2)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_2, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_3)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_3, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_4)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_4, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_5)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_5, questionFields)
        
        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_6)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_6, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_7)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_7, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.disease_8)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_8, questionFields)

        - config.formConfigs.disease_9.hidden = !config.formConfigs.disease_8.value === true
        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.disease_9)
          .col-sm-2
            +_questionBtn(config.formConfigs.disease_9, questionFields)

      .row.hidden(id="screen-disease-error")
        .col-sm-12
          .alert.alert-danger(role="alert")
            span #{config.errors.error_1.text}

      if formDisabled === false
        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
