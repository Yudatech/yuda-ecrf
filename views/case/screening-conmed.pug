extends ../caseLayout

include ../mixins/_formTemplate
include ../mixins/_questionBtn

block case-content
  .case-content
    form.form-horizontal(action=`/screening/conmed/${caseId}` method="POST")
      fieldset
        legend #{config.title}

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.conmed_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.conmed_1.questionLink)
        
        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.conmed_2)
          .col-sm-2
            +_questionBtn(config.formConfigs.conmed_2.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.conmed_3)
          .col-sm-2
            +_questionBtn(config.formConfigs.conmed_3.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.conmed_4)
          .col-sm-2
            +_questionBtn(config.formConfigs.conmed_4.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.conmed_5)
          .col-sm-2
            +_questionBtn(config.formConfigs.conmed_5.questionLink)

        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
