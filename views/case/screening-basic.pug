extends ../caseLayout

block case-content
  .case-content
    form.form-horizontal(action=`/screening/basic/${caseObj.case || ''}` method="POST")
      fieldset
        legend #{config.title}
        .row
          .col-sm-10
            .form-group
              label.col-sm-2.control-label #{config.sex.text}
              .col-sm-10
                each sexItem in sexConfig
                  label.radio-inline
                    input(type="radio" name="sex" value=sexItem.value checked=(caseObj.sex === sexItem.value))
                    span #{sexItem.text}
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign
        
        .row
          .col-sm-10
            .form-group
              label.col-sm-2.control-label #{config.birth.text}
              .col-sm-10
                input.form-control(type="number" name="birth" value=caseObj.birth)
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign

        .row
          .col-sm-10
            .form-group
              label.col-sm-2.control-label #{config.weight.text}
              .col-sm-10
                input.form-control(type="number" name="weight" value=caseObj.weight)
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign          

        .row
          .col-sm-10
            .form-group
              label.col-sm-2.control-label #{config.height.text}
              .col-sm-10
                input.form-control(type="number" name="height" value=caseObj.height)
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign

        input(type="submit" value=buttonConfig.buttons.save.text)
