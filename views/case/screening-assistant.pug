extends ../caseLayout

include ../mixins/_formTemplate
include ../mixins/_questionBtn

block case-content
  .case-content
    form.form-horizontal(action=`/screening/assistant/${caseId}` method="POST")
      fieldset
        legend #{config.title}

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_1.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_2)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_2.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_3)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_3.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_4)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_4.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_5)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_5.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.assistant_6)
          .col-sm-2
            +_questionBtn(config.formConfigs.assistant_6.questionLink)

        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
