extends ../caseLayout

include ../mixins/_formTemplate
include ../mixins/_questionBtn

block case-content
  .case-content
    form.form-horizontal(action=`/screening-dignose/${caseId}` method="POST")
      fieldset
        legend #{config.title}

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.dignose_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.dignose_1.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.dignose_2)
          .col-sm-2
            +_questionBtn(config.formConfigs.dignose_2.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.dignose_3)
          .col-sm-2
            +_questionBtn(config.formConfigs.dignose_3.questionLink)

        .row
          .col-sm-10
            .form-group
              .col-sm-offset-4.col-sm-10
                +_formTemplate(config.formConfigs.dignose_4)
          .col-sm-2
            +_questionBtn(config.formConfigs.dignose_4.questionLink)

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.dignose_5)
          .col-sm-2
            +_questionBtn(config.formConfigs.dignose_5.questionLink)

        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
