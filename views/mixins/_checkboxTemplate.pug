mixin _checkboxTemplate(config, disabled)
  - const name = config.name
  - const value = config.value
  - const realId = name + 'Real'
  - const hiddenValue = value === true ? 'true' : 'false'
  label.checkbox-placeholder
  .checkbox(id=`${config.name}-container` class=(config.hidden === true ? 'hidden' : ''))
    label
      if disabled !== true
        input(id=realId type="hidden" name=name value=hiddenValue)
      input(id=name disabled=disabled type="checkbox" checked=value data-customrequiretrue=config.requireTrueValue data-customrequirefalse=config.requireFalseValue onclick='handleCheckboxClick(this)')
      b #{config.text}
