extends caseLayout

block case-content
  .case-content
    form.form-horizontal(action=`/surgery/${surgeryObj.case || ''}` method="POST")
      fieldset
        legend #{config.title.device}

        .row
          .col-sm-10
            label.col-sm-4.control-label #{config.surgerydtc.text}
            .col-sm-8
              #surgerydtc.input-group.date(data-provide="datepicker")
                input.form-control(value=surgeryObj.surgerydtc)
                span.input-group-addon
                  i.glyphicon.glyphicon-th
              input#surgerydtcReal(type="hidden" name="surgerydtc" value=surgeryObj.surgerydtc)
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign

        .row
          .col-sm-10
            .form-group
              label.col-sm-4.control-label #{config.device_1.text}
              .col-sm-8
                select.form-control(name="device_1")
                  each surgeryLapAidModelItem in surgeryLapAidModelConfig
                    option(value=surgeryLapAidModelItem.value checked=(surgeryObj.device_1 === surgeryLapAidModelItem.value)) #{surgeryLapAidModelItem.text}
          .col-sm-2
            button.btn.btn-default(type="button")
              span.glyphicon.glyphicon-question-sign

        .row
          .col-sm-10
            .form-group
              label.col-sm-4.control-label #{config.device_2.text}
              .col-sm-8
                select.form-control(name="device_2")
