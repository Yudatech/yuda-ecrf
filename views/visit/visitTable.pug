extends ../caseLayout

block case-content
  .case-content
    h2 #{visitTableConfig.title}

    table.table.table-striped
      thead
        tr
          each visitTableHeader in visitTableConfig.headers
            th #{visitTableHeader.text}
      tbody
        each visit in visitList
          tr
            each visitTableHeader in visitTableConfig.headers
              if visitTableHeader.name !== 'operations'
                td #{visit[visitTableHeader.name]}
              else
                td
                  .row
                    .col-sm-4
                      a.btn.btn-default(role="button" href=`/visit/${caseId}/${visit._id}`)
                        span.glyphicon.glyphicon-pencil

                    .col-sm-4
                      a.btn.btn-default(role="button" href=`/remove/visit/${caseId}/${visit._id}`)
                        span.glyphicon.glyphicon-trash

    a.btn.btn-default(href=`/visit/${caseId}` role="button") #{buttonConfig.buttons.add.text}
