doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/dist/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/icons/doughnut.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    block header
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href="/") eCRF
          
          #navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href="/sites") Sites
              li
                a(href="/users") Users
              if user
                li
                  a(href="/case") Create Case
                li
                  a(href="/logout") Logout
              else
                li
                  a(href="/login") Login

    .content
      block content

    block scripts
      script(src="/jquery-3.2.1.min.js")
      script(src="/bootstrap/js/bootstrap.min.js")
      script(src="/dist/App.bundle.js")
