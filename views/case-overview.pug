extends caseLayout

include mixins/_formTemplate
include mixins/_questionBtn

block case-content
  .case-content
    h2 #{config.title}
    form.form-horizontal
      fieldset
        legend #{caseOverviewConfig.title}
        div.row
          div.col-sm-10
            .form-group
              label.col-sm-4.control-label #{caseOverviewConfig.labels._id.text}
              .col-sm-8
                input.form-control(type="text" readonly value=config._id)
        div.row
          div.col-sm-10
            .form-group
              label.col-sm-4.control-label #{caseOverviewConfig.labels.subjname.text}
              .col-sm-8
                input.form-control(type="text" readonly value=config.subjname)

        div.row
          div.col-sm-10
            .form-group
              label.col-sm-4.control-label #{caseOverviewConfig.labels.subjabbr.text}
              .col-sm-8
                input.form-control(type="text" readonly value=config.subjabbr)
        div.row
          div.col-sm-10
            .form-group
              label.col-sm-4.control-label #{caseOverviewConfig.labels.subjAcceptDate.text}
              .col-sm-8
                input.form-control(type="text" readonly value=config.subjAcceptDate)
      br
      fieldset
        legend #{caseOverviewConfig.labels.attachedDoc.text}
        img(src=`/uploads/${config.attachedDoc}`)
