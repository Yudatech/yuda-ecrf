            +_formTemplate(config.formConfigs.discontinuersn_6_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.discontinuersn_6_1, questionFields)

        if caseStatus === 'open'
          hr
          .row
            .col-sm-10
              .form-group
                label.control-label #{secondAuthConfig.formConfigs.password.text}
                input.form-control(type="password" name="password" data-customrequired)
      .row
        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
