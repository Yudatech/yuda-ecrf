extends caseLayout

include mixins/_formTemplate
include mixins/_questionBtn

block case-content
  .case-content
    form.form-horizontal(id="screeningchecklist-form" action=`/screeningchecklist/${caseId}` method="POST")
      - const formDisabled = !(locals.case.status === 'open' || locals.user.role === 'admin')
      fieldset(disabled=formDisabled)
        legend #{config.title}

        .row
          .col-sm-10
            +_formTemplate(config.formConfigs.screeningcheckdate)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheckdate, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_1)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_1, questionFields)
        
        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_2)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_2, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_3)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_3, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_4)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_4, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_5)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_5, questionFields)
        
        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_6)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_6, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_7)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_7, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_8)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_8, questionFields)

        .row
          .col-sm-10
            .form-group
              +_formTemplate(config.formConfigs.screeningcheck_9)
          .col-sm-2
            +_questionBtn(config.formConfigs.screeningcheck_9, questionFields)

        .row.hidden(id="screen-checklist-error-1")
          .col-sm-12
            .alert.alert-danger(role="alert")
              span #{config.errors.error_1.text}

      if formDisabled === false
        input.btn.btn-default.yuda-input-btn(type="submit" value=buttonConfig.buttons.save.text)
